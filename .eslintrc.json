{
    "env": {
        "es6": true,
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb",
        "prettier",
        "plugin:react/recommended",
        "plugin:jest/recommended",
        "plugin:jsx-a11y/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "react/jsx-filename-extension": [
            1,
            {
                "extensions": [
                    ".js",
                    ".jsx"
                ]
            }
        ],
        "no-param-reassign": [
            "error",
            {
                "props": false
            }
        ],
        "no-use-before-define": [
            "error",
            {
                "functions": false
            }
        ],
        "react/jsx-uses-react": "off",
        "react/react-in-jsx-scope": "off"
    },
    "plugins": [
        "prettier",
        "react",
        "react-hooks",
        "jsx-a11y"
    ]
}